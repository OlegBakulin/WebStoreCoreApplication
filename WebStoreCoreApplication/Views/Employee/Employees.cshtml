@model IEnumerable<WebStoreCoreApplication.ViewModels.EmployeeViewModel>
@{ 
    var isAdmin = User.IsInRole("Admins");
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body>
    <td>
        <a asp-action="NewUser" class="btn btn-success">Новенький</a>
    </td>
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IName</td>
                <td>@item.FName</td>
                <td>@item.OName</td>
                <td>
                    @Html.ActionLink("Детали", "EmployeeDetails", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id = "@item.Id"><i class="fa fa-cut"> Увольнение</i> </a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
