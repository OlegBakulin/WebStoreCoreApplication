@if (User.Identity.IsAuthenticated)
{
    <span>Приветствуем вас, 
        <a asp-action="Index" asp-controller="Profile">
            @User.Identity.Name
        </a>
    </span>
    
    //таким образом хотел сделать я выход 
    //<input type="submit" asp-action="Logout" asp-controller="Account" class="btn btn-default" value="Выход"/>
    //но потом увидел ваше решение и решил сделать как у вас что бы не переделывать
    <form method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
        <input type="submit" value="Выход" class="btn btn-default" />
    </form>
}
else
{
    <div class="btn-group pull-right">
        <a asp-action="Login" asp-controller="Account" class="btn btn-default">Вход</a>
        <a asp-action="Register" asp-controller="Account" class="btn btn-default">Регистрация</a>
    </div>
}